rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Recordings folder - users can read/write their own recordings
    match /recordings/{userId}/{fileName} {
      // Allow read if user is authenticated and owns the file
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write if user is authenticated and owns the folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

